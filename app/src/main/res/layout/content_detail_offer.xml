<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/logo"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageViewAvatar"
        tools:ignore="MissingConstraints"
        android:gravity="center">

        <TableRow
            android:id="@+id/tr_property_type"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type de bien"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maison - Villa"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_nb_rooms"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de chambre"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_nb_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_city"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marseille"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_area"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surface"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_price"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150000"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_professional"
            android:layout_weight="1"
            android:layout_marginStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/tv_professional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSL EXPLORE"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginLeft="10dp"/>
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>